@using SistemaDeportivo.Clases
@model AlumnoCLS
@{
    ViewData["Title"] = "ConfigAlumno";
    ViewData["Rol"] = new General().Rol;
}

<h1>Configuracion</h1>

<form asp-action="ConfigAlumno" asp-controller="Inicio" class="row" method="post">
    <div class="form-group col-4">
        <label asp-for="Usuario" class="col-form-label-lg"></label>
        <input asp-for="Usuario" class="form-control" readonly/>
        <span asp-validation-for="Usuario" class="text-danger"></span>
    </div>   
    <div class="form-group col-4">
        <label asp-for="Contraseña" class="col-form-label-lg"></label>
        <input asp-for="Contraseña" class="form-control" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>   
    <div class="form-group col-4">
        <label asp-for="ContraseñaConfirmar" class="col-form-label-lg"></label>
        <input asp-for="ContraseñaConfirmar" class="form-control" />
        <span asp-validation-for="ContraseñaConfirmar" class="text-danger"></span>
    </div>   
    <div class="form-group col-4">
        <label asp-for="Nombre" class="col-form-label-lg"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>   
    <div class="form-group col-4">
        <label asp-for="ApellidoPat" class="col-form-label-lg"></label>
        <input asp-for="ApellidoPat" class="form-control" />
        <span asp-validation-for="ApellidoPat" class="text-danger"></span>
    </div>   
    <div class="form-group col-4">
        <label asp-for="ApellidoMat" class="col-form-label-lg"></label>
        <input asp-for="ApellidoMat" class="form-control" />
        <span asp-validation-for="ApellidoMat" class="text-danger"></span>
    </div>     
        <div class="form-group col-6">
        <label asp-for="Edad" class="col-form-label-lg"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>   
    <div class="form-group col-6">
        <label asp-for="Sexo" class="col-form-label-lg"></label>
        <select asp-for="Sexo" class="form-control">
            <option value="" selected disabled>Selecciona un Género</option>
            <option value="Mujer">Mujer</option>
            <option value="Hombre">Hombre</option>
            <option value="Sin especificar">Sin especificar</option>
        </select>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>   
    <div class="form-group col-6">
        <label asp-for="Correo" class="col-form-label-lg"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div> 
    <div class="form-group col-6">
        <label asp-for="Celular" class="col-form-label-lg"></label>
        <input asp-for="Celular" class="form-control" />
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>
    <div class="col-12 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary p-3">
            Modificar Datos
        </button>
    </div>
</form>

